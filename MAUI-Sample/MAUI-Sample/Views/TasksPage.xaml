<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUI_Sample.ViewModels"
             xmlns:model="clr-namespace:MAUI_Sample.Models"
             x:Class="MAUI_Sample.Views.TasksPage"
             x:DataType="vm:TasksViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        <Grid ColumnDefinitions="*,Auto" Grid.Row="0" Margin="0,0,0,10">
            <Picker Title="Filtrer par statut"
                    Grid.Column="0"
                    ItemsSource="{Binding FilterOptions}"
                    SelectedItem="{Binding SelectedStatusFilter}"/>

            <Button Text="Appliquer"
                    Grid.Column="1"
                    Command="{Binding ApplyFilterCommand}"/>
        </Grid>

        <RefreshView Grid.Row="1" 
                    IsRefreshing="{Binding IsBusy}"
                    Command="{Binding LoadTasksCommand}">
            <CollectionView ItemsSource="{Binding Tasks}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Task">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Supprimer"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TasksViewModel}}, Path=DeleteTaskCommand}"
                                               CommandParameter="{Binding Id}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Margin="0,5" Padding="10">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackLayout Grid.Column="0" Spacing="5">
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding Description}" LineBreakMode="TailTruncation" />
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <Label Grid.Column="0" Text="{Binding Priority}" />
                                            <Label Grid.Column="2" Text="{Binding DueDate, StringFormat='{0:dd/MM/yyyy}'}" />
                                        </Grid>
                                    </StackLayout>
                                    <Frame Grid.Column="1" 
                                           BorderColor="LightGray"
                                           CornerRadius="5"
                                           Padding="5"
                                           WidthRequest="100">
                                        <Label Text="{Binding Status}" 
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center" />
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TasksViewModel}}, Path=UpdateStatusCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Frame.GestureRecognizers>
                                    </Frame>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <StackLayout Grid.Row="2" Spacing="10" Margin="0,10,0,0">
            <Label Text="Nouvelle tâche" FontAttributes="Bold" />
            <Entry Placeholder="Titre" Text="{Binding NewTask.Title}" />
            <Editor Placeholder="Description" Text="{Binding NewTask.Description}" HeightRequest="100" />
            <Picker Title="Priorité" 
                    ItemsSource="{Binding PriorityOptions}"
                    SelectedItem="{Binding NewTask.Priority}" />
            <DatePicker Date="{Binding NewTask.DueDate}" />
            <Button Text="Ajouter" 
                    Command="{Binding AddTaskCommand}"
                    HorizontalOptions="Fill" />
        </StackLayout>
    </Grid>
</ContentPage>